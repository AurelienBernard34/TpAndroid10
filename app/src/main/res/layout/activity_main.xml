<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="9"
    tools:context="com.example.admin.tpandroid10.MainActivity">


    <TextView
        android:id="@+id/text_courant"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="4"
        android:background="@android:color/darker_gray"
        android:gravity="left|center_vertical"
        android:paddingLeft="40dp"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Pile4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="0"
        android:background="@android:color/holo_orange_light"
        android:gravity="left|center_vertical"
        android:paddingLeft="40dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Pile3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="1"
        android:background="@android:color/holo_orange_light"
        android:gravity="left|center_vertical"
        android:paddingLeft="40dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Pile2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="2"
        android:background="@android:color/holo_orange_light"
        android:gravity="left|center_vertical"
        android:paddingLeft="40dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Pile1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="3"
        android:background="@android:color/holo_orange_light"
        android:gravity="left|center_vertical"
        android:paddingLeft="40dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/stylo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_column="0"
        android:layout_row="4"
        android:gravity="left|center_vertical"
        android:src="@drawable/un_stylo_plume"
        android:translationY="20dp" />

    <ImageView
        android:id="@+id/Fleche1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_column="0"
        android:layout_row="3"
        android:background="@android:color/holo_orange_light"
        android:gravity="left|center_vertical"
        android:src="@mipmap/ic_launcher"
        android:translationY="20dp" />

    <ImageView
        android:id="@+id/Fleche2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_column="0"
        android:layout_row="2"
        android:gravity="left|center_vertical"
        android:src="@mipmap/ic_launcher"
        android:translationY="20dp" />

    <ImageView
        android:id="@+id/Fleche3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_column="0"
        android:layout_row="1"
        android:gravity="left|center_vertical"
        android:src="@mipmap/ic_launcher"
        android:translationY="20dp" />

    <ImageView
        android:id="@+id/Fleche4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_column="0"
        android:layout_row="0"
        android:gravity="left|center_vertical"
        android:src="@mipmap/ic_launcher"
        android:translationY="20dp" />

    <TextView />


    <Button
        android:id="@+id/touche2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="5"
        android:background="@android:color/background_light"
        android:text="2" />

    <Button
        android:id="@+id/touche3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="5"
        android:background="@android:color/background_light"
        android:text="3" />

    <Button
        android:id="@+id/touche6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="6"
        android:background="@android:color/background_light"
        android:text="6" />

    <Button
        android:id="@+id/touche_moins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:background="@android:color/holo_green_dark"
        android:text="-" />

    <Button
        android:id="@+id/touche8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="7"
        android:background="@android:color/background_light"
        android:text="8" />

    <Button
        android:id="@+id/touche9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="7"
        android:background="@android:color/background_light"
        android:text="9" />

    <Button
        android:id="@+id/touche7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="7"
        android:background="@android:color/background_light"
        android:text="7" />

    <Button
        android:id="@+id/touche_slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="7"
        android:background="@android:color/holo_green_dark"
        android:text="/" />

    <Button
        android:id="@+id/touche5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="6"
        android:background="@android:color/background_light"
        android:text="5" />

    <Button
        android:id="@+id/touche4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="6"
        android:background="@android:color/background_light"
        android:text="4" />

    <Button
        android:id="@+id/touche_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="5"
        android:background="@android:color/holo_green_dark"
        android:text="+" />

    <Button
        android:id="@+id/touche_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="8"
        android:background="@android:color/holo_green_dark"
        android:text="Pop" />

    <Button
        android:id="@+id/touche_swap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="8"
        android:background="@android:color/holo_green_dark"
        android:text="Swap" />

    <Button
        android:id="@+id/touche_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="8"
        android:background="@android:color/holo_green_dark"
        android:text="Clear" />

    <Button
        android:id="@+id/touche_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="8"
        android:background="@android:color/holo_red_dark"
        android:text="Enter" />

    <Button
        android:id="@+id/touche1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:background="@android:color/background_light"
        android:text="1" />


</GridLayout>
